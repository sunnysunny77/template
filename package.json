{
  "name": "template",
  "type": "module",
  "version": "3.0.0",
  "description": "template",
  "main": "./js/app.js",
  "scripts": {
    "install": "openssl req -x509 -newkey rsa:4096 -keyout ssl.key -out ssl.crt -sha256 -days 3650 -nodes -subj '/C=XX/ST=WA/L=Perth/O=Template/OU=Web/CN=template.loclalhost'",
    "caddy-server": "run-script-os",
    "caddy-config": "run-script-os",
    "caddy-format": "run-script-os",
    "caddy-server:default": "cross-env-shell cd $INIT_CWD/default/caddy/cmd/caddy && caddy run --config $INIT_CWD/Caddyfile",
    "caddy-config:default": "cross-env-shell cd $INIT_CWD/default/caddy/cmd/caddy && caddy adapt run --config $INIT_CWD/Caddyfile",
    "caddy-format:default": "cross-env-shell cd $INIT_CWD/default/caddy/cmd/caddy && caddy fmt $INIT_CWD/Caddyfile --overwrite",
    "caddy-server:win32": "cross-env-shell $INIT_CWD/win32/caddy/cmd/caddy/caddy run --config $INIT_CWD/Caddyfile",
    "caddy-config:win32": "cross-env-shell $INIT_CWD/win32/caddy/cmd/caddy/caddy run --config $INIT_CWD/Caddyfile",
    "caddy-format:win32": "cross-env-shell $INIT_CWD/win32/caddy/cmd/caddy/caddy fmt $INIT_CWD/Caddyfile --overwrite",
    "php-server": "node php-server.js",
    "watch-css": "sass ./scss/app.scss:./site/css/app.min.css --style compressed -w",
    "build-css": "sass ./scss/app.scss:./site/css/app.min.css --style compressed",
    "production-css": "sass ./scss/app.scss:./site/css/app.min.css --style compressed --no-source-map",
    "watch-js": "rollup -c ./rollup.config-watch.mjs -w --sourcemap",
    "build-js": "rollup -c ./rollup.config.mjs --sourcemap",
    "production-js": "rollup -c ./rollup.config.mjs",
    "watch": "concurrently \"npm:caddy-server\" \"npm:php-server\" \"npm:watch-css\" \"npm:watch-js\"",
    "build": "concurrently \"npm:build-css\" \"npm:build-js\"",
    "production": "concurrently \"npm:production-css\" \"npm:production-js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sunnysunny77/template.git"
  },
  "author": "D.C",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sunnysunny77/template/issues"
  },
  "homepage": "https://github.com/sunnysunny77/template#readme",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "latest",
    "@rollup/plugin-babel": "latest",
    "@rollup/plugin-commonjs": "latest",
    "@rollup/plugin-terser": "latest",
    "bootstrap": "^5.3.3",
    "concurrently": "latest",
    "cross-env": "latest",
    "eslint": "latest",
    "fs": "latest",
    "globals": "latest",
    "local-ssl-proxy":  "latest",
    "openssl-self-signed-certificate": "latest",
    "php-server": "latest",
    "rollup": "latest",
    "rollup-plugin-livereload": "latest",
    "rollup-plugin-sourcemaps": "latest",
    "run-script-os": "latest",
    "sass": "latest"
  }
}
